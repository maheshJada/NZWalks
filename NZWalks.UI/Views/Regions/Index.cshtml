@model IEnumerable<NZWalks.UI.Models.DTO.RegionDTO>
@{
}
<h1 class="mt-3">Regions</h1>
<div>
    <div class=" d-flex justify-content-end">
        <a class=" btn btn-secondary" asp-controller="Regions" asp-action="Add">Add Regions</a>
     </div>
</div>
<table>
    <thead>
        <th>ID</th>
        <th>Code</th>
        <th>Name</th>
        <th> </th>
    </thead>
    <tbody>
        @foreach(var walk in Model)
        {
            <tr>
                <td>@walk.Id</td>
                <td>@walk.Code</td>
                <td>@walk.Name</td>
                <td>
                    <a asp-controller="Regions" asp-action="Edit" asp-route-id="@walk.Id" class="btn btn-light">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if(ViewBag.Response is not null)
{
    <p>@ViewBag.Response</p>
}